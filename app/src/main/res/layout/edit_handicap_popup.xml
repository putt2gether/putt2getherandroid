<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/popBackground">

    <EditText
        android:id="@+id/edit_handicap_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15dp"
        android:inputType="number"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/black_color"
        android:layout_margin="30dp"/>

    <LinearLayout
        android:layout_below="@+id/edit_handicap_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="15dp">
        <RelativeLayout
            android:id="@+id/save_editHandi"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn_white"
            android:layout_marginRight="20dp">
            <com.putt2gether.view.LatoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="Roboto-Bold_0.ttf"
                android:text="SAVE"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/puttText"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cancel_editHandi"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn_white"
            android:layout_marginLeft="20dp">
            <com.putt2gether.view.LatoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="Roboto-Bold_0.ttf"
                android:text="CANCEL"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/puttText"/>


        </RelativeLayout>
    </LinearLayout>




</RelativeLayout>