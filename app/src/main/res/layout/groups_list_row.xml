<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">


    <RelativeLayout
        android:id="@+id/groups_row_layout"
        android:layout_below="@+id/teamB_player1_layout"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/groups_row_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <com.putt2gether.view.CircleImageView

                android:id="@+id/group_row_image"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorPrimary"
                android:src="@drawable/vishal" />

        </RelativeLayout>

        <com.putt2gether.view.LatoTextView
            android:id="@+id/group_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/groups_row_lay"
            android:text="ADD PLAYER"
            android:textSize="13dp"
            app:font="Roboto-Regular_0.ttf"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"/>

        <com.putt2gether.view.LatoTextView
            android:id="@+id/group_row_addBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:font="Roboto-Regular_0.ttf"
            android:text="ADD"
            android:padding="7dp"
            android:textColor="#262525"
            android:layout_centerVertical="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e1e1"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>