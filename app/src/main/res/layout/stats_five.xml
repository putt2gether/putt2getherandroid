<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">



    <View
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selected_gray"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.putt2gether.view.LatoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECOVERY"
            android:textColor="#000"
            app:font="Roboto-Bold_0.ttf"
            android:textSize="20dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selected_gray"/>


    <RelativeLayout
        android:layout_margin="0dp"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.putt2gether.view.LatoTextView
                android:id="@+id/scramble_stats"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000"
                app:font="Roboto-Bold_0.ttf"
                android:textSize="28dp"
                />

            <Button
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/statsbut"
                android:text="SCRAMBLE"
                android:textSize="16dp"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <com.putt2gether.view.LatoTextView
                android:id="@+id/sand_stats"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000"
                app:font="Roboto-Bold_0.ttf"
                android:textSize="28dp"
                />

            <Button
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/statsbut"
                android:text="SAND SAVES"
                android:textSize="16dp"
                />



        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@mipmap/recoverystats"
            />


    </RelativeLayout>

</LinearLayout>