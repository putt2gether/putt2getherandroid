<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/leader_row"
    android:background="@color/white_color">

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <com.putt2gether.view.LatoTextView
            android:id="@+id/rank_net_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            app:font="Roboto-Regular_0.ttf"
            android:textColor="@color/black_color"

            android:text="T1"/>

        <com.putt2gether.view.LatoTextView
            android:textSize="16dp"
            android:layout_toRightOf="@id/rank_net_second"
            android:id="@+id/player_name_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="15"
            android:ellipsize="end"
            android:layout_marginLeft="25dp"
            app:font="Roboto-Regular_0.ttf"
            android:textColor="@color/black_color"
            android:text="Bunny"/>

        <com.putt2gether.view.LatoTextView
            android:textSize="16dp"
            android:layout_toRightOf="@id/player_name_second"
            android:id="@+id/player_sub_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            app:font="Roboto-Bold_0.ttf"
            android:textColor="@color/viewline"
            android:text="15"/>



        <com.putt2gether.view.LatoTextView
            android:textSize="16dp"
            android:layout_alignParentRight="true"
            android:id="@+id/secondleader_row_feet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:font="Roboto-Regular_0.ttf"
            android:textColor="@color/black_color"

            android:text="EVEN"/>

    </RelativeLayout>

    <View

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selected_gray"/>

</RelativeLayout>