<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e2e1e1"
        android:paddingBottom="5dp">


        <com.putt2gether.view.LatoTextView
            android:id="@+id/aaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GREEN IN REGULATION"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:textColor="#000"
            app:font="Roboto-Regular_0.ttf"
            android:textSize="16dp"/>

        <LinearLayout
            android:id="@+id/hit_miss_layout"
            android:layout_below="@+id/aaaa"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp">

                <com.putt2gether.view.LatoTextView
                    android:id="@+id/hit_gir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/black_color"
                    android:textSize="23dp"
                    app:font="Roboto-Bold_0.ttf"
                    android:layout_gravity="center"/>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circular_layout"
                    android:layout_marginTop="15dp">
                    <com.putt2gether.view.LatoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HIT"
                        android:textSize="14dp"
                        android:layout_centerInParent="true"
                        android:paddingLeft="10dp"
                        android:textColor="#000"
                        android:paddingRight="10dp"
                        android:paddingBottom="3dp"
                        app:font="Roboto-Regular_0.ttf"
                        android:paddingTop="3dp"/>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="11dp">

                <com.putt2gether.view.LatoTextView
                    android:id="@+id/missed_gir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="23dp"
                    android:textColor="@color/black_color"
                    app:font="Roboto-Bold_0.ttf"
                    android:layout_gravity="center"/>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circular_layout"
                    android:layout_marginTop="15dp">
                    <com.putt2gether.view.LatoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MISSED"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:layout_centerInParent="true"
                        app:font="Roboto-Regular_0.ttf"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>