<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true">

    <LinearLayout
        android:background="@drawable/rectangular_box"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            android:id="@+id/finishdialogfrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/autopressclose" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.putt2gether.view.LatoTextView
                android:id="@+id/hole_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="HOLE"
                android:textColor="#000"
                android:gravity="center"
                android:lines="3"
                app:font="Roboto-Bold_0.ttf"
                android:textSize="14dp"
                android:layout_weight="1"/>

            <com.putt2gether.view.LatoTextView
                android:id="@+id/player1_420"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="player1"
                android:lines="3"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/decline"
                app:font="Roboto-Bold_0.ttf"
                android:textSize="14dp"/>

            <com.putt2gether.view.LatoTextView
                android:id="@+id/player2_420"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="player2"
                android:gravity="center"
                android:lines="3"
                android:layout_weight="1"
                android:textColor="@color/edit"
                app:font="Roboto-Bold_0.ttf"
                android:textSize="14dp"/>


            <com.putt2gether.view.LatoTextView
                android:id="@+id/player3_420"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="player3"
                android:lines="3"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/accepted"
                app:font="Roboto-Bold_0.ttf"
                android:textSize="14dp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/recyclerview420"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>