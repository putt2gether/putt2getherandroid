<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <LinearLayout
        android:gravity="center_vertical"
        android:weightSum="9"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">


        <com.putt2gether.view.LatoTextView
            android:id="@+id/playerscoreone"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:gravity="center"
            android:text="10"
            android:textColor="#000"
            android:textSize="16dp" />

        <LinearLayout

            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.putt2gether.view.LatoTextView
                android:layout_marginTop="3dp"
                android:id="@+id/playerscoretwo"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:background="@drawable/circle_plus"
                android:gravity="center"
                android:text="W"
                android:textColor="#fff"
                android:textSize="12dp" />


        </LinearLayout>

        <LinearLayout

           android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <com.putt2gether.view.LatoTextView
            android:gravity="center"
            android:id="@+id/playerscorethree"

            android:layout_width="150dp"
            android:layout_height="wrap_content"


            android:text="1sddsd3232"
            android:textColor="#000"
            android:textSize="16dp" />

        </LinearLayout>
        <com.putt2gether.view.LatoTextView
            android:id="@+id/playerscorefour"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:text="&amp;"
            android:textColor="#000"
            android:textSize="16dp" />


        <com.putt2gether.view.LatoTextView
            android:id="@+id/playerscorefive"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="430"
            android:textColor="#000"
            android:textSize="16dp" />


    </LinearLayout>

</LinearLayout>