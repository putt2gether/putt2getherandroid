<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">


    <RelativeLayout
        android:id="@+id/mygroup_row_layout"
        android:layout_below="@+id/teamB_player1_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/teamB_player2_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <com.putt2gether.view.CircleImageView
                android:id="@+id/mygroup_row_image"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                app:civ_border_width="0dp"
                app:civ_border_color="@color/colorPrimary"
                android:src="@drawable/vishal" />

        </RelativeLayout>

        <com.putt2gether.view.LatoTextView
            android:id="@+id/mygroup_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/teamB_player2_lay"
            android:text="SCORER NAME"
            android:textColor="#4c4c4c"
            android:textSize="12dp"
            app:font="Roboto-Regular_0.ttf"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>


        <RelativeLayout
            android:id="@+id/mygroup_row_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_next_blue"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d7d5d5"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>