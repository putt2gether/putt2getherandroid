<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circular_last10">

    <ImageView
        android:id="@+id/cross_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_clear"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"/>
    <com.putt2gether.view.LatoTextView
        android:id="@+id/strng_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATS RANGE"
        android:textColor="#fff"
        android:textSize="17dp"
        app:font="Roboto-Bold_0.ttf"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout

        android:id="@+id/last_layout"
        android:layout_below="@+id/strng_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/last_lay"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_layout"
            android:layout_marginRight="5dp">


            <com.putt2gether.view.LatoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAST GAME"
                android:textColor="@color/action"
                android:textSize="14dp"
                app:font="Roboto-Bold_0.ttf"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/last_lay_5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_layout"
            android:layout_marginLeft="5dp">


            <com.putt2gether.view.LatoTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAST 5 GAMES"
                android:textColor="@color/action"
                android:textSize="14dp"
                app:font="Roboto-Bold_0.ttf"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/last_10_layout"
        android:layout_below="@+id/last_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/last_lay_10"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_layout"
            android:layout_marginRight="5dp">


            <com.putt2gether.view.LatoTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAST 10 GAMES"
                android:textColor="@color/action"
                android:textSize="14dp"
                app:font="Roboto-Bold_0.ttf"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/last_lay_20"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_layout"
            android:layout_marginLeft="5dp">


            <com.putt2gether.view.LatoTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAST 20 GAMES"
                android:textColor="@color/action"
                android:textSize="14dp"
                app:font="Roboto-Bold_0.ttf"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/last_10_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="45dp">

        <RelativeLayout
            android:id="@+id/last_lay_overall"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_layout"
            android:layout_marginRight="5dp">


            <com.putt2gether.view.LatoTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OVERALL"
                android:textColor="@color/action"
                android:textSize="14dp"
                app:font="Roboto-Bold_0.ttf"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"/>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>