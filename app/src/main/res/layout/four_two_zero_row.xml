<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:padding="2dp">

        <com.putt2gether.view.LatoTextView
            android:id="@+id/hole_no_420"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#000"
            android:gravity="center"
            app:font="Roboto-Regular_0.ttf"
            android:textSize="14dp"
            android:layout_weight="1"/>

        <com.putt2gether.view.LatoTextView
            android:id="@+id/score1_420"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/decline"
            app:font="Roboto-Regular_0.ttf"
            android:textSize="14dp"/>

        <com.putt2gether.view.LatoTextView
            android:id="@+id/score2_420"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/edit"
            app:font="Roboto-Regular_0.ttf"
            android:textSize="14dp"/>


        <com.putt2gether.view.LatoTextView
            android:id="@+id/score3_420"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/accepted"
            app:font="Roboto-Regular_0.ttf"
            android:textSize="14dp"/>

    </LinearLayout>

</LinearLayout>